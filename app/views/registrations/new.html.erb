<h1>Sign up</h1>
<%= form_with model: @user, url: sign_up_path do |form| %>
  <% if @user.errors.any? %>
    <div class='alert alert-danger'>
      <h3><%= pluralize(@user.errors.count, "error") %> stopped you from creating your account:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class='mb-3'>
    <%= form.label :email %>
    <%= form.text_field :email, class:'form-control', placeholder: 'exple@server.io' %>
  </div>
  <div class='mb-3'>
    <%= form.label :password %>
    <%= form.password_field :email, class:'form-control', placeholder: 'password' %>
  </div>
  <div class='mb-3'>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class:'form-control', placeholder: 'password' %>
  </div>
  <div class='mb-3'>
    <%= form.submit 'Sign up', class: 'btn btn-primary px-3' %>
  </div>
<% end %>
